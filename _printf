#include "main.h"

/**
 * _printf: it prints any type of data based on the format string provided.
 * @format: the format string that specifies how the data should be printed.
 * Return: the number of bytes that were printed.
 */
int _printf(const char *format, ...)
{
	int sum = 0;
	va_list a_p;
	char *ptr, *start;
	params_t params = PARAMS_INIT;

	va_start(a_p, format);

	if (!format || (format[0] == '%' && !format[1]))
		return (-1);
	if (format[0] == '%' && format[1] == ' ' && !format[2])
		return (-1);
	for (ptr = (char *)format; *ptr; ptr++)
	{
		init_params(&params, a_p);
		if (*ptr != '%')
		{
			sum += _putchar(*ptr);
			continue;
		}
		start = ptr;
		ptr++;
		while (get_flag(ptr, &params)) /* while char at p is flag char */
		{
			ptr++; /* next char */
		}
		ptr = get_width(ptr, &params, a_p);
		ptr = get_precision(ptr, &params, a_p);
		if (get_modifier(ptr, &params))
			ptr++;
		if (!get_specifier(ptr))
			sum += print_from_to(start, ptr,
				params.l_modifier || params.h_modifier ? ptr - 1 : 0);
		else
			sum += get_print_func(ptr, a_p, &params);
	}
	_putchar(BUF_FLUSH);
	va_end(a_p);
	return (sum);
}
